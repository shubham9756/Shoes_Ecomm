<%- include('navbar.ejs') %>

<div class="container my-5" id="invoice">
    <!-- Invoice Card -->
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Invoice Header -->
        <div class="card-header bg-dark text-white py-3">
            <div class="row align-items-center g-3">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-receipt fs-3 me-3"></i>
                        <h2 class="h4 mb-0 fw-bold">ORDER INVOICE</h2>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex flex-column flex-md-row justify-content-md-end align-items-start align-items-md-center gap-2">
                        <span class="badge bg-primary fs-6"><i class="bi bi-hash me-1"></i><%= order[0].order_id %></span>
                        <span class="badge bg-<%= order[0].order_status === 'delivered' ? 'success' : order[0].order_status === 'cancelled' ? 'danger' : 'warning' %> text-capitalize">
                            <%= order[0].order_status %>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Invoice Body -->
        <div class="card-body px-4 px-lg-5 py-4 bg-light-subtle">
            <!-- Order Summary Section -->
            <div class="row g-4 mb-4">
                <!-- Order Details -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-3 d-flex align-items-center">
                                <i class="bi bi-info-circle-fill text-primary me-2"></i>
                                Order Information :- 
                            </h5>
                            <div class="row g-2">
                                <div class="col-6">
                                    <p class="mb-1"><strong>Order Date:</strong></p>
                                    <p><%= new Date(order[0].order_date).toLocaleDateString('en-IN') %></p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1"><strong>Payment Method:</strong></p>
                                    <p class="text-capitalize"><%= order[0].payment_method %></p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1"><strong>Transaction ID:</strong></p>
                                    <p class="text-monospace"><%= order[0].transaction_id %></p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1"><strong>Payment Status:</strong></p>
                                    <p class="text-capitalize badge bg-<%= order[0].payment_status === 'completed' ? 'success' : 'warning' %>">
                                        <%= order[0].payment_status %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Details -->
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-3 d-flex align-items-center">
                                <i class="bi bi-truck text-primary me-2"></i>
                                Shipping Details :-
                            </h5>
                            <div class="vstack gap-2">
                                <div class="d-flex">
                                    <span class="me-2"><i class="bi bi-person-fill"></i></span>
                                    <span><%= order[0].fullname %></span>
                                </div>
                                <div class="d-flex">
                                    <span class="me-2"><i class="bi bi-telephone-fill"></i></span>
                                    <span><%= order[0].mobile %></span>
                                </div>
                                <div class="d-flex">
                                    <span class="me-2"><i class="bi bi-geo-alt-fill"></i></span>
                                    <span>
                                        <%= order[0].address %>, <%= order[0].area %><br>
                                        <%= order[0].city %>, <%= order[0].state %><br>
                                        <%= order[0].country %> - <%= order[0].pincode %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items Table -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center">No</th>
                                    <th>Product</th>
                                    <th  class="text-center">Size</th>
                                    <th  class="text-end">Price (₹)</th>
                                    <th  class="text-center">Qty</th>
                                    <th class="text-end">Total (₹)</th>
                                </tr>
                            </thead>
                            <tbody class="border-top-0">
                                <% products.forEach((item, index) => { %>
                                    <tr>
                                        <th scope="row" class="text-center"><%= index + 1 %></th>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (item.product_image) { %>
                                                    <img src="<%= item.product_image %>" alt="<%= item.product_name %>" class="rounded me-3" width="60" height="60">
                                                <% } %>
                                                <div>
                                                    <h6 class="mb-0"><%= item.product_name %></h6>
                                                    <small class="text-muted">SKU: <%= item.product_sku || 'N/A' %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center"><%= item.product_size %></td>
                                        <td class="text-end">
                                            <div class="d-flex flex-column">
                                                <span class="text-decoration-line-through text-muted small"><%= item.product_market_price %></span>
                                                <span><%= item.product_price %></span>
                                            </div>
                                        </td>
                                        <td class="text-center"><%= item.product_qty %></td>
                                        <td class="text-end fw-bold"><%= item.product_total %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                            <tfoot class="table-group-divider">
                                <tr>
                                    <td colspan="5" class="text-end fw-bold">Subtotal</td>
                                    <td class="text-end fw-bold">₹<%= order[0].subtotal %></td>
                                </tr>
                                <% if (order[0].discount > 0) { %>
                                    <tr>
                                        <td colspan="5" class="text-end fw-bold">Discount</td>
                                        <td class="text-end fw-bold text-danger">-₹<%= order[0].discount %></td>
                                    </tr>
                                <% } %>
                                <% if (order[0].shipping_charge > 0) { %>
                                    <tr>
                                        <td colspan="5" class="text-end fw-bold">Shipping</td>
                                        <td class="text-end fw-bold">₹<%= order[0].shipping_charge %></td>
                                    </tr>
                                <% } %>
                                <tr class="table-active">
                                    <td colspan="5" class="text-end fw-bold">Grand Total</td>
                                    <td class="text-end fw-bold fs-5">₹<%= order[0].total_amount %></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Invoice Footer -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center border-top pt-4">
                <div class="mb-3 mb-md-0">
                    <p class="text-muted small mb-1">Thank you for your purchase!</p>
                    <p class="text-muted small">For any queries, please contact our customer support.</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary" onclick="window.history.back()">
                        <i class="bi bi-arrow-left me-1"></i> Back
                    </button>
                    <button class="btn btn-primary" onclick="printInvoice()">
                        <i class="bi bi-printer-fill me-1"></i> Print Invoice
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Print Function -->
<script>
    function printInvoice() {
        const originalContent = document.body.innerHTML;
        const printSection = document.getElementById("invoice").innerHTML;
        
        document.body.innerHTML = `
            <!DOCTYPE html>
            <html lang="en">
            <head>
                <meta charset="UTF-8">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <title>Invoice <%= order[0].order_id %></title>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
                <style>
                    @media print {
                        body { 
                            padding: 20px !important; 
                            background: white !important; 
                            font-size: 14px !important;
                        }
                        .card { border: none !important; box-shadow: none !important; }
                        .table { page-break-inside: avoid !important; }
                        .no-print { display: none !important; }
                        .badge { border: 1px solid #000 !important; }
                        .text-primary { color: #000 !important; }
                    }
                </style>
            </head>
            <body class="p-3">
                ${printSection}
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"><\/script>
                <script>
                    window.addEventListener('afterprint', function() {
                        window.location.reload();
                    });
                <\/script>
            </body>
            </html>
        `;
        
        setTimeout(() => {
            window.print();
        }, 300);
    }
</script>
<%- include('footer.ejs') %>
