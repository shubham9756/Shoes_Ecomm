        function searchArea() {
            var pincode = document.getElementById('pincode').value
            $.ajax({
                url: `https://api.postalpincode.in/pincode/${pincode}`
            }).done(function (result) {
                if (result[0].Status == 'Success') {
                    document.getElementById('country').value = result[0].PostOffice[0].Country;
                    document.getElementById('state').value = result[0].PostOffice[0].State;
                    document.getElementById('city').value = result[0].PostOffice[0].District;
                    document.getElementById('area').value = result[0].PostOffice[0].Block;
                }
            })

        }
    </script>

  <script>
  function sendOtp(event) {
    event.preventDefault();
    const mail = document.getElementById('mail').value;
    
    $.ajax({
      url: "/send_otp",
      type: "post",
      data: { email: mail },
      success: function (res) {
        console.log(res);
        $('#emailModal').modal('hide');
        $('#otpModel').modal('show');
      },
      error: function () {
        alert("Something went wrong while sending OTP.");
      }
    });
  }

  function verifyOtp(event) {
    event.preventDefault();
    const otp = document.getElementById('otp').value;
    
    $.ajax({
      url: "/verifyotp",
      type: "post",
      data: { otp: otp },
      success: function (res) {
        console.log(res);
        if (res.status == false) {
          document.getElementById('otp').style.border = '2px solid red';
          alert("Invalid OTP.");
          document.getElementById('otp').value = "";
        } else {
          alert("OTP Verified!");
          redirect_buy_now() // Example redirect
        }
      },
      error: function () {
        alert("Something went wrong while verifying OTP.");
      }
    });
  }

     
  </script>
