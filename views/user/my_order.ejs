<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 8px;
    }
    .order-table th, .order-table td {
      vertical-align: middle;
    }
  </style>
</head>
<body>

<div class="container my-5">
  <h2 class="mb-4 text-center">My Orders</h2>

  <div class="table-responsive">
    <table class="table table-bordered table-hover order-table align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>Custmar Name</th>
          <th>Mobile</th>
          <th>State</th>
          <th>Address</th>
          <th>Total Amount</th>
          <th>payment method</th>
          <th>Payment Status</th>
          <th>Order Date</th>
          <th>Order Status</th>
          <th>More Details</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% for(var i= 0;i<result.length;i++){%>
        <tr>
          <td><%-result[i].fullname%></td>
          <td><%-result[i].mobile%></td>
          <td><%-result[i].state%></td>
          <td><%-result[i].address%></td>
          <td><%-result[i].total_amount%></td>
          <td><%-result[i].payment_method%></td>
          <td><%-result[i].payment_status%></td>
          <td><%-result[i].order_date.toISOString().split('T')[0]%></td>
          <td><%-result[i].order_status%></td>
          <td>
            <a href="/print_invoice/<%-result[i].order_id%>" >
              <button class="btn btn-sm p-2   btn-outline-primary">Details</button>
            </a>

          </td>
        </tr>
        <%}%>
        <!-- Order Row 2 -->
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

