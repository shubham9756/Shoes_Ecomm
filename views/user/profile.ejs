<%- include('navbar.ejs') %>

<style>
  .profile-card {
    max-width: 400px;
    margin: 60px auto;
    padding: 30px;
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    background-color: #fff;
  }

  .profile-card h6 {
    font-weight: 600;
  }

  .profile-card .btn {
    border-radius: 20px;
  }

  @media (max-width: 576px) {
    .profile-card {
      margin: 30px 15px;
      padding: 20px;
    }
  }
</style>

<div class="container">
  <div class="profile-card text-center">
    <h5 class="fw-bold mb-3">Your Profile</h5>
    <h6 class="mb-1 text-primary"><%= result[0].customer_name %></h6>
    <p class="text-muted mb-2"><%= result[0].customer_email %></p>
    <p class="text-muted mb-3">Mobile: <%= result[0].customer_mobile %></p>
    
    <a href="/logout" class="btn btn-danger btn-sm px-4">Logout</a>
  </div>
</div>

<%- include('footer.ejs') %>
