<%-include('navbar.ejs')%>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <h2 class="mb-4 mt-3 ">Edit Product Style</h2>

    <div class="container p-4 shadow text-dark fw-bold">
        <form action="/admin/update_style" method="post" enctype="multipart/form-data">
            <div class="row g-5 mb-4">
                <input type="hidden" name="product_style_id" value="<%-result[0].product_style_id%>">

                <div class="col-md-5">
                    <label for="brand" class="form-label">Products Style Name</label>
                    <input type="text" name="style_name" id="brand" class="form-control" placeholder="Enter Shoes Style"
                         value="<%-result[0].product_style_name%>">
                </div>

                <div class="col-md-5">
                    <label for="image" class="form-label">Product Style File</label>
                    <input type="file" name="image" id="image" class="form-control" value="/Style/<%-result[0].style_img%>">
                    <img src="/Style/<%-result[0].style_img%>" width="100px" height="100px"style="margin:10px" >
                </div>
            </div>
            <div class="row">
                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-primary px-3 py-1 fs-5 shadow">Save</button>
                </div>
            </div>
        </form>
    </div>
<%-include('footer.ejs')%>