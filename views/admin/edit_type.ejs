<%-include('navbar.ejs')%>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <h2 class="mb-4 mt-3 ">Product Type</h2>

    <div class="container p-4 shadow text-dark fw-bold">
        <form action="/admin/update_type" method="post" enctype="multipart/form-data">
            <div class="row g-5 mb-4">
                <input type="hidden" name="product_type_id" value="<%-result[0].product_type_id%>">
                <div class="col-md-5">
                    <label for="brand" class="form-label">Products Type </label>
                    <input type="text" name="type_name" id="brand" class="form-control" placeholder="Enter Shoes Type "
                         value="<%-result[0].product_type_name%>">
                </div>
                <div class="col-md-5">
                    <label for="image" class="form-label">Product  File</label>
                    <input type="file" name="image" id="image" class="form-control" required>
                    <img src="/Type/<%-result[0].type_img%>" width="100px" height="120px" style="margin:10px;" >
                </div>
            </div>
            <div class="row">
                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-primary px-3 py-1 fs-5 shadow">Save</button>
                </div>
            </div>
        </form>
    </div>
<%-include('footer.ejs')%>