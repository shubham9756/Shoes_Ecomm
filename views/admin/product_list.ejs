 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
 <%-include('navbar.ejs')%>
<div class="container mt-4">
  <h2 class="mb-4">Product List</h2>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover m-0" width="100%" >
      <thead class="p-2">
        <tr>
          <th>SrNo.</th>
          <th>Name</th>
          <th>Market Price</th>
          <th>Discount (%)</th>
          <th>Price</th>
          <th>Description</th>
          <th>Image</th>
          <th>Rating</th>
          <th>Trending</th>
          <th>Brand </th>
          <th>Style </th>
          <th>For</th>
          <th>Kid Type</th>
          <th>Type </th>
          <th>Offer Expiry</th>
          <th>Added Date</th>
          <th>Stock</th>
          <th>Color</th>
        </tr>
      </thead>
      <% for(var i=0;i<result.length;i++){ %>
        <tr id="productTableBody" >
            <td><%-i + 1%></td>
            <td><%-result[i].product_name%></td>
            <td><%-result[i].product_market_price%></td>
            <td><%-result[i].apply_discount_percent%></td>
            <td><%-result[i].product_price%></td>
            <td height="50px" style="overflow-block:scroll;" ><%-result[i].product_description%></td></td>
            <td>
              <img src="/product/<%-result[i].product_main_image%>" width="100px"></td>
            <td><%-result[i].product_rating%></td>
            <td><%-result[i].product_is_trending%></td>
            <td><%-result[i].product_brand_id%></td>
            <td><%-result[i].product_style_id%></td>
            <td><%-result[i].product_for%></td>
            <td><%-result[i].product_kid_type%></td>
            <td><%-result[i].product_brand_name%></td>
            <td><%-result[i].offer_expiry_date.toISOString().split('T')[0]%></td>
            <td><%-result[i].product_added_date.toISOString().split('T')[0]%></td>
            <td><%-result[i].product_stock%></td>
            <td><%-result[i].product_color%></td>
        </tr>
        <%}%>
    </table>
  </div>
</div>
 <%-include('footer.ejs')%>

