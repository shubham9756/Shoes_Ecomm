<%-include('navbar.ejs')%>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <h2 class="  mt-3">Add New Product</h2>
        <div class="container mt-4 shadow p-4">
            <form action="/admin/save_product" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="mb-3 col-md-3">
                        <label for="product_name" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="product_name" name="product_name">
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_market_price" class="form-label">Market Price</label>
                        <input type="number" class="form-control" id="product_market_price" name="product_market_price">
                    </div>
                   
                    <div class="mb-3 col-md-3">
                        <label for="product_price" class="form-label">Selling Price</label>
                        <input type="number" class="form-control" id="product_price" name="product_price">
                    </div>


                    <div class="mb-3 col-md-3">
                        <label for="product_main_image" class="form-label">Main Image</label>
                        <input type="file" class="form-control" id="product_main_image" name="product_main_image">
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_rating" class="form-label">Rating</label>
                        <input type="number" step="0.1" class="form-control" id="product_rating" name="product_rating">
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_is_trending" class="form-label">Trending?</label>
                        <select class="form-select" id="product_is_trending" name="product_is_trending">
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>

                    <div class="mb-3 col-md-3">
                        <label for="product_brand_id" class="form-label">Brand</label>
                       <select name="product_brand_id" class="form-control">
                        <option value="">--Select Brand --</option>
                        <%for(var i=0;i<brands.length;i++){%>
                        <option value="<%-brands[i].product_brand_id%>"><%-brands[i].product_brand_name%></option>
                        <%}%>
                       </select>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_style_id" class="form-label">Style</label>
                        <select name="product_style_id" class="form-control">
                        <option value="">--Select Brand --</option>
                        <%for(var i=0;i<style.length;i++){%>
                        <option value="<%-style[i].product_style_id%>"><%-style[i].product_style_name%></option>
                        <%}%>
                       </select>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_for" class="form-label">Product For</label>
                        <select class="form-select" id="product_for" name="product_for" onchange="kidShow()">
                            <option value="Male">Men</option>
                            <option value="Female">Women</option>
                            <option value="Kids">Kids</option>
                        </select>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_kid_type" class="form-label">Kid Type</label>
                        <select class="form-select" id="product_kid_type" name="product_kid_type" disabled>
                            <option >Both</option>
                            <option >Boys</option>
                            <option >Girls</option>
                        </select>
                    </div>

                    <div class="mb-3 col-md-3">
                        <label for="product_type_id" class="form-label">Product Type</label>
                         <select name="product_type_id" class="form-control">
                        <option value="">--Select Product Type --</option>
                        <%for(var i=0;i<types.length;i++){%>
                        <option value="<%-types[i].product_type_id%>"><%-types[i].product_type_name%></option>
                        <%}%>
                       </select>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="offer_expiry_date" class="form-label">Offer Expiry Date</label>
                        <input type="date" class="form-control" id="offer_expiry_date" name="offer_expiry_date">
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_added_date" class="form-label">Added Date</label>
                        <input type="date" class="form-control" id="product_added_date" name="product_added_date">
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="product_stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="product_stock" name="product_stock">
                    </div>

                    <div class="mb-3 col-md-3">
                        <label for="product_color" class="form-label">Color</label>
                        <input type="text" class="form-control" id="product_color" name="product_color">
                    </div>
                </div>
                <div class="mb-3 col-md-12">
                    <label for="product_description" class="form-label">Description</label>
                    <textarea class="form-control" id="editor" name="product_description"
                        rows="2"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>

    
     <script>
        function kidShow(){
            var name =document.getElementById('product_for').value;
            // console.log(name)
            if(name == 'Kids'){
                document.getElementById("product_kid_type").removeAttribute('disabled')
            }
            else{
                document.getElementById("product_kid_type").setAttribute('disabled',"true")
            }
        }
    </script>
    <%-include('footer.ejs')%>

   